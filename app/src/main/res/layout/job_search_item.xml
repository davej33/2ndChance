<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/date_posted_icon"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/location_icon"
        app:layout_constraintLeft_toRightOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="@+id/location_icon"
        app:srcCompat="@drawable/ic_calendar_24px" />

    <TextView
        android:id="@+id/positionTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Title"
        android:textSize="18sp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="IT Manager" />

    <ImageView
        android:id="@+id/work_icon"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:srcCompat="@drawable/ic_work_black_24px"
        app:layout_constraintTop_toTopOf="@+id/location_icon"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/location_icon"
        android:layout_marginBottom="0dp" />

    <ImageView
        android:id="@+id/location_icon"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView"
        app:layout_constraintLeft_toRightOf="@+id/textView"
        app:layout_constraintTop_toTopOf="@+id/textView"
        app:srcCompat="@drawable/ic_location_on_black_24px" />

    <TextView
        android:id="@+id/companyName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical"
        android:text="CACI"
        android:textSize="14sp"
        app:layout_constraintLeft_toRightOf="@+id/work_icon"
        app:layout_constraintTop_toBottomOf="@+id/positionTitle" />

    <TextView
        android:id="@+id/postDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="4dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="0dp"
        android:text="2 Days Ago"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/cityName"
        app:layout_constraintLeft_toRightOf="@+id/date_posted_icon"
        app:layout_constraintTop_toTopOf="@+id/cityName" />

    <TextView
        android:id="@+id/cityName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="4dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="0dp"
        android:text="Chicago"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/location_icon"
        app:layout_constraintLeft_toRightOf="@+id/location_icon"
        app:layout_constraintTop_toTopOf="@+id/location_icon"
        app:layout_constraintVertical_bias="0.4" />

    <View
        android:layout_width="368dp"
        android:layout_height="1dp"
        android:layout_marginBottom="0dp"
        android:layout_marginEnd="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:background="@color/tw__light_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.406"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/descriptionText" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="8dp"
        android:background="#fff"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_favorite_border_black_24px" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="1dp"
        android:layout_height="12dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:background="@android:color/darker_gray"
        android:text="TextView"
        app:layout_constraintLeft_toRightOf="@+id/companyName"
        app:layout_constraintTop_toTopOf="@+id/companyName"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/companyName"
        android:layout_marginBottom="0dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="1dp"
        android:layout_height="12dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:background="@android:color/darker_gray"
        android:text="TextView"
        app:layout_constraintLeft_toRightOf="@+id/cityName"
        app:layout_constraintTop_toTopOf="@+id/cityName"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/cityName"
        android:layout_marginBottom="0dp" />

    <TextView
        android:id="@+id/descriptionText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/companyName"
        app:layout_constraintVertical_bias="0.0"
        tools:text="Super duper alackazazm fsijbnfdijbf msdnnasdfmna afdjnasdfo nsadfnkoasdf ajnsdfnls laskdfn lajnksdf aldjnsfk kasdfjn jsdfn kdjfb kqwjfb ksjfadn" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline3"
        app:layout_constraintGuide_begin="35dp"
        android:orientation="horizontal" />


</android.support.constraint.ConstraintLayout>